# Oracle Database Configuration
# ============================

# Database SYS/SYSTEM Password
# Must meet Oracle password requirements: 8+ chars, uppercase, lowercase, digit
ORACLE_PWD=Welcome123

# Oracle Character Set
ORACLE_CHARACTERSET=AL32UTF8

# Archive Log Mode (set to true for production)
ENABLE_ARCHIVELOG=false

# Force Logging (set to true for production)
ENABLE_FORCE_LOGGING=false


# Compression Advisor Configuration
# ==================================

# Compression Manager User
COMPRESSION_USER=COMPRESSION_MGR

# Compression Manager Password
COMPRESSION_PWD=Compress123

# Scratch Tablespace Name
COMPRESSION_TS=SCRATCH_TS

# Scratch Tablespace Size (in MB)
SCRATCH_TS_SIZE=10240

# Scratch Tablespace Datafile Location
SCRATCH_TS_DATAFILE=/opt/oracle/oradata/FREE/scratch01.dbf


# ORDS Configuration
# ==================

# ORDS Admin Password
ORDS_PWD=Welcome123

# ORDS Public User Password
ORDS_PUBLIC_USER_PWD=Welcome123


# Streamlit Dashboard Configuration
# ==================================

# Dashboard Access Password
STREAMLIT_PASSWORD=Dashboard123

# Dashboard Port (external)
STREAMLIT_PORT=8501


# Database Performance Tuning
# ============================

# SGA Size (in MB) - Recommended: 2048-4096 for development
INIT_SGA_SIZE=2048

# PGA Size (in MB) - Recommended: 1024-2048 for development
INIT_PGA_SIZE=1024

# Shared Pool Size (in MB)
SHARED_POOL_SIZE=512

# Buffer Cache Size (in MB)
DB_CACHE_SIZE=1024

# Processes (max concurrent connections)
PROCESSES=300

# Sessions (max concurrent sessions)
SESSIONS=400


# Docker Container Configuration
# ===============================

# Container Hostname
ORACLE_HOSTNAME=oracle-db

# Container Name
CONTAINER_NAME=hcc-oracle-23c

# Shared Memory Size (for Oracle SGA)
SHM_SIZE=2g


# Logging Configuration
# =====================

# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable SQL Trace
SQL_TRACE=false

# Enable Diagnostic Events
DIAGNOSTIC_DEST=/opt/oracle/oradata/logs


# Network Configuration
# =====================

# Database Listener Port
LISTENER_PORT=1521

# Enterprise Manager Express Port
EM_EXPRESS_PORT=5500

# ORDS Port
ORDS_PORT=8080


# Development/Testing Features
# =============================

# Enable Sample Schemas (HR, OE, PM, IX, SH, BI)
ENABLE_SAMPLE_SCHEMAS=false

# Enable Database Vault
ENABLE_DB_VAULT=false

# Enable Label Security
ENABLE_LABEL_SECURITY=false

# Enable Oracle Text
ENABLE_ORACLE_TEXT=true


# Important Notes:
# ================
# 1. Copy this file to .env and customize values
# 2. NEVER commit .env to version control (it's in .gitignore)
# 3. Use strong passwords for production environments
# 4. Oracle 23c Free has these limitations:
#    - Max 2 CPUs
#    - Max 2GB RAM
#    - Max 12GB user data
#    - No HCC (Hybrid Columnar Compression) - will simulate/demo only
# 5. For production, use Oracle Enterprise Edition with appropriate licensing
