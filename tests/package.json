{
  "name": "hcc-compression-advisor-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for HCC Compression Advisor",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "jest tests/e2e --coverage",
    "test:watch": "jest --watch",
    "test:performance": "jest tests/performance --runInBand",
    "test:security": "jest tests/security --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint tests/**/*.js",
    "lint:fix": "eslint tests/**/*.js --fix"
  },
  "keywords": [
    "oracle",
    "database",
    "compression",
    "hcc",
    "testing"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "oracledb": "^6.3.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "../src/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "testTimeout": 30000
  }
}
